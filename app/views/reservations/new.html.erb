<h1>Confirmar sua reserva:</h1>
<div>
  <dl>
    <dt>Nome:</dt>
    <dd><%= @room.name %></dd>
    <dt>Número de hóspedes:</dt>
    <dd><%= session[:guest] %></dd>
    <dt>Preço total da estadia:</dt>
    <dd><%= number_to_currency(session[:price], locale: :'pt-BR') %></dd>
    <dt>Dia da entranda:</dt>
    <dd><%= I18n.l(session[:start].to_date) %></dd>
    <dt>Dia da saída:</dt>
    <dd><%= I18n.l(session[:final].to_date) %></dd>
    <dt>Métodos de Pagamento:</dt>
    <dd><%= @inn.payment_methods %></dd>
    <dt>Check in:</dt>
    <dd><%= @inn.check_in.strftime('%H:%M') %></dd>
    <dt>Check out:</dt>
    <dd><%= @inn.check_out.strftime('%H:%M') %></dd>
  </dl>
</div>
<%= form_with(model: [@room, @reservation]) do |f| %>
  <div class="field">
    <%= f.hidden_field :guest_number %>
  </div>
  <div>
    <%= f.hidden_field  :total_price%>
  </div>
  <div>
    <%= f.hidden_field  :start_date%>
  </div>
  <div>
    <%= f.hidden_field  :final_date%>
  </div>
  <div class="actions">
    <%= f.submit "Confirmar Reserva" %>
  </div>
<% end %>
