<%= form_with(model: @inn) do |f| %>
  <div>
    <%= f.label :trade_name %>
    <%= f.text_field :trade_name %>
  </div>
  <div>
    <%= f.label :company_name %>
    <%= f.text_field :company_name %>
  </div>
  <div>
    <%= f.label :registration_number%>
    <%= f.text_field :registration_number %>
  </div>
  <div>
    <%= f.label :phone %>
    <%= f.text_field :phone %>
  </div>
  <div>
    <%= f.label :email%>
    <%= f.text_field :email %>
  </div>
  <div>
    <%= f.label :address%>
    <%= f.text_field :address %>
  </div>
  <div>
    <%= f.label :neighborhood %>
    <%= f.text_field :neighborhood %>
  </div>
  <div>
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>
  <div>
    <%= f.label :zip_code %>
    <%= f.text_field :zip_code %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.label :payment_methods %>
    <%= f.text_field :payment_methods %>
  </div>
  <div>
    <%= f.label :pet %>
    <%= f.select :pet, options_for_select(Inn.pets.map {|key, value| [key.titleize, Inn.pets.key(value)]}, @inn.pet) %>
    <%#= f.text_field :pet %>
  </div>
  <div>
    <%= f.label :rules %>
    <%= f.text_field :rules %>
  </div>
  <div>
    <%= f.label :check_in %>
    <%= f.text_field :check_in %>
  </div>
  <div>
    <%= f.label :check_out %>
    <%= f.text_field :check_out %>
  </div>
  <div>
    <%= f.label :status %>
    <%= f.select :status, options_for_select(Inn.statuses.map {|key, value| [key.titleize, Inn.statuses.key(value)]}, @inn.status) %>
  </div>
  <div>
    <%= f.submit 'Salvar' %>
  </div>
<% end %>
