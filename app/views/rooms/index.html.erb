<h1>Seus Quartos</h1>
<%= link_to 'Cadastrar novo quarto', new_room_path %>
<% if @rooms.empty? %>
  <p>Não existem quartos cadastrados.</p>
<% else %>
  <section id="room">
    <% @rooms.each do |room| %>
      <div>
        <dl>
          <dt>Nome:</dt>
          <dd><%= room.name %></dd>
          <dt>Descrição:</dt>
          <dd><%= room.description %></dd>
          <dt>Diária:</dt>
          <dd><%= number_to_currency(room.daily_rate, locale: :'pt-BR') %></dd>
        </dl>
        <%= link_to 'Detalhes', room_path(room)%>
        <br>
        <br>
      </div>
    <% end %>
  <% end%>
</section>
