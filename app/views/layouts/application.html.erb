<!DOCTYPE html>
<html>
  <head>
    <title>Pousadaria</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>
  <body class="bg-light">
    <div class="container">
      <nav class='d-flex justify-content-center align-items-center'>
        <%= link_to "Início", root_path, class:'px-3' %>
        <% if owner_signed_in? %>
          <%= link_to 'Reservas', reservations_inns_path, class:'px-3'%>
          <%= link_to 'Estadias ativas', stay_list_inns_path, class:'px-3'%>
          <%= link_to 'Cadastrar pousada', new_inn_path, class:'px-3'%>
          <%= link_to 'Pousada', inns_path, class:'px-3' %>
          <%= link_to 'Quartos', rooms_path, class:'px-3'%>
          <%= link_to 'Seus dados', edit_owner_registration_path, class:'px-3'%>
          Olá <%= current_owner.name%>
          <%= current_owner.email%>
          <%= button_to 'Sair', destroy_owner_session_path, method: :delete, class:'btn btn-outline-danger mx-3' %>
        <% elsif guest_signed_in? %>
          <%= link_to "Seus dados", edit_guest_registration_path , class:'px-3'%>
          <%= link_to "Minhas reservas", list_path , class:'px-3'%>
          Olá <%= current_guest.name%>
          <%= button_to 'Sair', destroy_guest_session_path, method: :delete, class:'btn btn-outline-danger mx-3' %>
        <% else %>
          <%= link_to "Anfitrião", new_owner_session_path , class:'px-3'%>
          <%= link_to "Hóspede", new_guest_session_path , class:'px-3'%>
        <% end %>
        <%= form_with url: search_inns_path, method: :get do |f| %>
          <%=f.label :query, 'Buscar pousada:'%>
          <%=f.text_field :query%>
          <%=f.submit 'Buscar'%>
        <% end %>
      </nav>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <main>
        <%= yield %>
      </main>
    </div>
    <footer class="mt-5 pt-5"></footer>
  </body>
</html>
